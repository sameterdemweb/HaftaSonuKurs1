@using BlogSayfa.Services
@model BlogSayfa.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img src="~/Resimler/logo.png" class="logoBoyut" />
</div>
<div class="mt-5">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Resimler/araba1.png" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>First slide label</h5>
                    <p>Some representative placeholder content for the first slide.</p>
                </div>
            </div>

            @foreach (var slider in Model.Sliderlar)
            {
                <div class="carousel-item">
                    @if (slider.Link != "")
                    {
                        <a href="@slider.Link" target="_blank">
                            <img src="@slider.Resim" class="d-block w-100" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@slider.Baslik</h5>
                                <p>@slider.Aciklama</p>
                            </div>
                        </a>
                    }
                    else
                    {
                        <img src="@slider.Resim" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@slider.Baslik</h5>
                            <p>@slider.Aciklama</p>
                        </div>
                    }

                </div>
            }

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>


    @{
        foreach (var blog in Model.Bloglar)
        {
            <div class="mt-5">
                <div class="row">
                    <div class="col-md-5">
                        <img src="@blog.Resim" class="w-100" alt="...">
                    </div>
                    <div class="col-md-7">
                        <h3>@AletCantasi.BuyukHarfeCevir(blog.Baslik)</h3>
                        <h2>@AletCantasi.BuyukHarfeCevir(blog.Etiket)</h2>
                        <p>Tarih:@blog.Tarih</p>
                        <p>@blog.Aciklama</p>
                    </div>
                </div>
            </div>
        }
    }
    <div class="mt-4">
        <h2>Hizmetlerimiz</h2>
        <ul>
            @{
                foreach (var hizmet in Model.Hizmetler)
                {
                    <li><a href="@hizmet.Link"target="_blank">@hizmet.HizmetAdi</a></li>
                }
            }
        </ul>

    </div>
