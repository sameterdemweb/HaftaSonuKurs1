@model MvcOdev.Entities.Otopark
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ABdev_header_spacer"></div>

<div class="bannerpages">
	<div class="container clearfix">
		<div class="floatleft">
			<h1>OTOPARK</h1>
		</div>
		<div class="floatright">
			<div class="breadcrumbs"><a asp-controller="Arac" asp-action="Index">Home</a>  <span class="current">-Araç Hesapla</span></div>
		</div>
	</div>
</div>
<section class="dnd_section_dd section_with_header">
	<header>
		<div class="dnd_container">
			<h1 class="text-center">Soru 5</h1>
		</div>
	</header>
		
			
	<div class="dnd_section_content">
		<div class="dnd_container">
			<div class="dnd_column_dd_span12 ">
				<div class="wpcf7" id="wpcf7-f2038-p2035-o1" lang="en-US" dir="ltr">
					<div class="screen-reader-response">
					</div>
					<form asp-controller="Arac"  asp-action="OtoparkDurumu">
						<div asp-validation-summary="ModelOnly"></div>
						<div class="row">
							<div class="col-12 mb-3">Aşağıdaki Otopark  uygun şekilde doldurunuz.</div>
							<div class="col-md-4">
								<label>Otoparka Giren Arac Miktarı</label>
								<span class="wpcf7-form-control-wrap your-name">
									<input asp-for="GirenArac" type="text" placeholder="Kitap Adını Giriniz">
								</span>
							</div>
							<div class="col-md-4">
								<label>Çıkan Araç Miktarı</label>
								<span class="wpcf7-form-control-wrap your-name">
									<input asp-for="CikanArac" type="text" placeholder="İlk Gün Okunan Kitap Sayfa Sayısını Giriniz">
								</span>
							</div>
							<div class="col-md-4">
								<label>Mevcut Araç</label>
								<span class="wpcf7-form-control-wrap your-name">
									<input asp-for="MevcutArac"  type="text" placeholder="Her Gün Okunan Kitap Sayfasını Giriniz">
								</span>
							</div>
							<div class="col-md-4">
								<label>Çalışma Saati</label>
								<span class="wpcf7-form-control-wrap your-name">
									<input asp-for="Saat"  type="text" placeholder="Kitap Sayfa Sayısını Giriniz">
								</span>
							</div>
						</div>
						<div class="row">
							<input type="submit" value="Submit">
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>


</section>

