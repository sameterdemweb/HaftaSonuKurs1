@model BolumveDoktorViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Bolumler</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bolumler.BolumAdi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bolumler.BolumAdi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bolumler.Bina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bolumler.Bina.BinaAdi)
        </dd>
    </dl>
</div>


<h2>Bölümdeki Doktorlar</h2>
<table class="table table-bordered">
    <tr>
        <th>
            Doktor Adı
         </th>
         <th>
             Detay
         </th>
    </tr>
    <tr>
        @foreach (var item in Model.Doktorlar)
        {
            <tr>
                <td>
                    @item.AdSoyad
                </td>
            
                <td>
                     
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
               
                </td>
            </tr>
        }
    </tr>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Bolumler.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
