        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Icerik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Icerik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UrunKategori)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UrunKategori.KategoriAdi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
         <a asp-action="Index" class="btn btn-warning" >İptal</a>
    </form>
</div>
</div>
