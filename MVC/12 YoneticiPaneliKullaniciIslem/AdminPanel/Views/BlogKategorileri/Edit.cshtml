@model AdminPanel.Entities.BlogKategorileri

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Blog Kategorileri</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="">Anasayfa</a></li>
                        <li class="breadcrumb-item active"><a asp-controller="BlogKategorileri" asp-action="">Blog Kategorileri</a></li>
                        <li class="breadcrumb-item active">@Model.KategoriAdi</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->

            <div class="row">


                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Blog Kategorisini Düzenle</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                            <div class="card-body">

                                <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="KategoriAdi" class="control-label"></label>
                            <input asp-for="KategoriAdi" class="form-control" />
                            <span asp-validation-for="KategoriAdi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Durum" class="control-label"></label>
                            <select asp-for="Durum" class="form-control" >
                                <option value="1">Yayında</option>
                                <option value="0">Pasif</option>
                            </select>
                            <span asp-validation-for="Durum" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UstKategoriId" class="control-label"></label>
                            <select asp-for="UstKategoriId" class="form-control" asp-items="ViewBag.UstKategoriId">
                                   <option value="">Kategori Yok</option>
                            </select>
                            <span asp-validation-for="UstKategoriId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                        </div>
                    </form>



                            </div>
                            <!-- /.card-body -->
                    </div>
                </div>




            </div>

            <div>
                <a class="btn btn-info" asp-action="Index">Listeye Dön</a>
            </div>

            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }

            </div>
    </section>
