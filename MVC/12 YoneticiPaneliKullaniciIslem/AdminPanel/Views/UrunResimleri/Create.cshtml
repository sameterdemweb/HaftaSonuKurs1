@model AdminPanel.Entities.UrunFotograflari

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Ürün Resmi Ekleme</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Urunler" asp-action="">Ürünler</a></li>
                    <li class="breadcrumb-item active">Ürün Resmi Ekleme</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->

        <div class="row">

            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Ürün Resmi Ekle</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="card-body">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="UrunId" class="control-label"></label>
                                <select asp-for="UrunId" class="form-control" asp-items="ViewBag.UrunId"></select>
                            </div>

                            <div class="form-group">
                                <label asp-for="ResimDosya" class="control-label"></label>
                                <input asp-for="ResimDosya" accept="Image/*" class="form-control" />
                                <span asp-validation-for="ResimDosya" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Durum" class="control-label"></label>
                                <select asp-for="Durum" class="form-control">
                                    <option value="1">Yayında</option>
                                    <option value="0">Pasif</option>
                                </select>
                                <span asp-validation-for="Durum" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-warning">İptal</a>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>



        </div>


        @section Css{
            <style>
                .note-editable {
                    height: 200px
                }
            </style>

        }
            @section Scripts {
            @{
                //await Html.RenderPartialAsync("_ValidationScriptsPartial");
                <script>
                    $(function() {
                        // Summernote
                        $('#summernote').summernote()

                        // CodeMirror
                        CodeMirror.fromTextArea(document.getElementById("codeMirrorDemo"), {
                            mode: "htmlmixed",
                            theme: "monokai"
                        });
                    })
                </script>
            }

        }
        </div>
    </section>

